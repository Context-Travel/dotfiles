alias rm='rm -i'
alias mkdir='mkdir -p'
alias ln='ln -v'
alias rcup='rcup -v'

alias gsh='gitsh'

alias b='bundle'
alias be='bundle exec'
alias s='bundle exec rspec'
alias migrate="be rake db:migrate db:rollback && be rake db:migrate db:test:prepare"

[[ -f ~/.aliases.local ]] && source ~/.aliases.local
